<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/t"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2">

    <TextView
        android:id="@+id/txtLC"
        android:layout_width="345dp"
        android:layout_height="44dp"
        android:background="#F2DEB0"
        android:text=" Listagem e Cadastro"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.147" />

    <TextView
        android:id="@+id/txtTV"
        android:layout_width="338dp"
        android:layout_height="85dp"
        android:layout_marginBottom="380dp"
        android:background="#F2DEB0"
        android:text="Total das vendas"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="340dp"
        android:layout_height="108dp"
        app:layout_constraintBottom_toTopOf="@+id/txtTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLC"
        app:layout_constraintVertical_bias="0.473">

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtProduto"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#F2DEB0"
                android:text="PRODUTO"
                android:textStyle="bold"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtEstoque"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:background="#F2DEB0"
                android:text="ESTOQUE"
                android:textStyle="bold"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtValor"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:background="#F0DDAF"
                android:text="VALOR"
                android:textStyle="bold"
                android:textSize="20dp" />
        </TableRow>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>