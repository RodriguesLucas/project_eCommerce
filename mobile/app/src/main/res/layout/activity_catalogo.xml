<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    android:outlineSpotShadowColor="#000000">


    <TableLayout
        android:id="@+id/bor"
        android:layout_width="353dp"
        android:layout_height="373dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtClique">

        <TableRow
            android:id="@+id/firstRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">


            <TextView
                android:id="@+id/txtProduto"
                android:layout_width="166dp"
                android:layout_height="match_parent"
                android:background="#F2DEB0"
                android:text="PRODUTO"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEstoque"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:background="#F2DEB0"
                android:outlineSpotShadowColor="#000000"
                android:text="ESTOQUE"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtValor"
                android:layout_width="101dp"
                android:layout_height="match_parent"
                android:width="200dp"
                android:background="#F2DEB0"
                android:backgroundTint="#F2DEB0"
                android:text="VALOR"
                android:textColor="#000000"
                android:textStyle="bold"
                android:visibility="visible" />

        </TableRow>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </TableLayout>

    <TextView
        android:id="@+id/txtClique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="94dp"
        android:background="#F2E1B2"
        android:text="CLIQUE PARA COMPRAR"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>