<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2">

    <TextView
        android:id="@+id/txtNomeJogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F2DEB0"
        android:text="NOME DO JOGO"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.693" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="330dp"
        android:layout_height="267dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/txtAno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtAno"
        android:layout_width="235dp"
        android:layout_height="24dp"
        android:background="#F2DEB0"
        android:text="Ano de LanÃ§amento:"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="510dp" />

    <TextView
        android:id="@+id/txtValor1"
        android:layout_width="235dp"
        android:layout_height="24dp"
        android:layout_marginBottom="24dp"
        android:background="#F2DEB0"
        android:text="Valor:"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnFinalizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtPlataforma"
        android:layout_width="235dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:background="#F2DEB0"
        android:text="Plataformas:"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/txtValor1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAno"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnFinalizar"
        android:layout_width="294dp"
        android:layout_height="54dp"
        android:layout_marginBottom="48dp"
        android:background="#000000"
        android:backgroundTint="#000000"
        android:text="Finalizar Compra"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAno"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="#000000"
        app:strokeColor="#000000" />
</androidx.constraintlayout.widget.ConstraintLayout>