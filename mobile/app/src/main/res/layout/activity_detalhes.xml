        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPlataformaAux"
        app:rippleColor="#000000"
        app:strokeColor="#000000" />

    <TextView
        android:id="@+id/txtValorAux"
        android:layout_width="106dp"
        android:layout_height="32dp"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="315dp"
        android:background="#F2DEB0"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtPlataformaAux"
        android:layout_width="151dp"
        android:layout_height="33dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="248dp"
        android:background="#F2DEB0"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAno"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="308dp"
        android:layout_marginBottom="385dp"
        android:background="#F1DDAF"
        android:text="Ano de LanÃ§amento:"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtValor1"
        android:layout_width="104dp"
        android:layout_height="32dp"
        android:layout_marginTop="384dp"
        android:layout_marginBottom="315dp"
        android:background="#F1DDAF"
        android:text="Valor:"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtValorAux"
        app:layout_constraintHorizontal_bias="0.705"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtPlataforma"
        android:layout_width="145dp"
        android:layout_height="33dp"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="248dp"
        android:background="#F1DDAF"
        android:text="Plataformas:"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtPlataformaAux"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>